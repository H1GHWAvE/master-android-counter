<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/application_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/app_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_mask"
            android:clickable="true"
            android:padding="16dp">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/app_logo"
                android:text="@string/main_card_appPlaceholder"
                android:textSize="@dimen/material_text_title" />

            <TextView
                android:id="@+id/app_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:layout_toRightOf="@+id/app_logo"
                android:text="@string/main_card_licensePlaceholder"
                android:textSize="@dimen/material_text_body1" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/app_options_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/application_info"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_mask"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_info_black_24px"
                    android:tint="@color/secondary_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/application_info"
                    android:textSize="@dimen/material_text_body1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/application_permission"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_mask"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_accessibility_24dp"
                    android:tint="@color/secondary_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/application_permission"
                    android:textSize="@dimen/material_text_body1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/application_license"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ripple_mask"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:paddingRight="16dp"
                    android:src="@drawable/ic_security_24dp"
                    android:tint="@color/secondary_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/application_license"
                    android:textSize="@dimen/material_text_body1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
